<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="80dp"
              android:minHeight="90dp"
              android:orientation="horizontal" android:background="#FFFFFF">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp" android:id="@+id/news_icon"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="5">

        <TextView
                android:text="标题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/news_name" android:textSize="25sp"
                android:layout_gravity="top" android:layout_marginTop="5dp"
                android:paddingLeft="5dp" android:textColor="@color/black"/>
        <TextView
                android:text="副标题"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/news_desc" android:textSize="15sp"
                android:layout_gravity="top" android:layout_marginTop="5dp"
                android:paddingLeft="5dp" android:textColor="@color/black"/>

    </LinearLayout>
</LinearLayout>