<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">
	<Button
			android:text="设置闹钟"
			android:layout_width="0dp"
			android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
			android:id="@+id/btn_set" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_margin="20dp"
	/>
	<Button
			android:text="关闭闹钟"
			android:layout_width="0dp"
			android:layout_height="wrap_content" android:id="@+id/btn_cancel"
			app:layout_constraintTop_toBottomOf="@+id/btn_set" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent" android:layout_margin="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>